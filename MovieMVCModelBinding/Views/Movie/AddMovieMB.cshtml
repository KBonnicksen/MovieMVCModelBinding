@model Movie
@{
    ViewData["Title"] = "AddMovieMB";
}

<h1>AddMovieMB</h1>

@if (ViewData["Success"] != null)
{
    <h2>@ViewData["Success"]</h2>
}
else
{
    <form class="" method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Director"></label>
            <input asp-for="Director" />
            <span asp-validation-for="Director"></span>
        </div>

        <div class="form-group">
            <label asp-for="YearReleased"></label>
            <input asp-for="YearReleased" />
            <span asp-validation-for="YearReleased"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" />
            <span asp-validation-for="Genre"></span>
        </div>

        <div class="form-group">
            <label asp-for="IMDBRating"></label>
            <input asp-for="IMDBRating" />
            <span asp-validation-for="IMDBRating"></span>
        </div>
        <input type="submit" value="Add Movie" />
    </form>
}

